@model Movie

@{
    string currentModel = Helper.GetTypeName(Model.GetType().ToString());
    ViewData["Title"] = @currentModel + " Delete";
}

<h1>@currentModel Delete</h1>
<hr />


<div class="col-lg-12 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-danger text-uppercase text-white text-center" style="height:40px;">
            <h5>@currentModel Delete</h5>
        </div>

        <form asp-action="Delete">
            <div class="row form-group col-12 p-3">
                <div class="form-group col-3"></div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" readonly placeholder="Name Film" />
                </div>
                <div class="form-group col-3">
                    <input asp-for="IsReaded" type="checkbox" class="btn-check" id="btn-check-outlined" autocomplete="off">
                    <label asp-for="IsReaded" class="btn btn-outline-danger" for="btn-check-outlined">Is Readed</label>
                </div>
            </div>

            <div class="btn-group p-2">
                <div calss="col-8">


                    <div class="row p-2">

                        <div class="form-group col-6">
                            <label asp-for="CountryId" class="control-label"></label>
                            <input asp-for="Country!.Name" class="form-control" readonly />
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="ProducerId" class="control-label"></label>
                            <input asp-for="CurrentProducer!.LastName" class="form-control" readonly />
                        </div>

                        <div class="form-group col-2">
                            <label asp-for="PartFilm" class="control-label"></label>
                            <input asp-for="PartFilm" class="form-control" readonly />
                        </div>
                        <div class="form-group col-4">
                            <label asp-for="AcceptableAge" class="control-label"></label>
                            <input asp-for="AcceptableAge" class="form-control" readonly />
                        </div>
                        <div class="form-group col-2">
                            <label asp-for="Rating" class="control-label"></label>
                            <input asp-for="Rating" class="form-control" readonly />
                        </div>

                        <div class="form-group col-6">
                            <label asp-for="YearShown" class="control-label"></label>
                            <input asp-for="YearShown" class="form-control" readonly />
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="FilmDuration" class="control-label"></label>
                            <input asp-for="FilmDuration" class="form-control" readonly />
                        </div>
                        <div class="form-group col-12">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" readonly></textarea>
                        </div>

                    </div>
                </div>

                <div class="col-4 p-3">

                    @if (Model.PhotoUrl == "noimage.png")
                    {
                        <div class="form-group col-12 justify-content-center align-middle mb-0 pb-0">
                            <img id="PreviewPhoto" src="~/images/@Model.PhotoUrl" alt="Logo Image" width="300" height="300" style="border:1px; margin-top:30px;" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group col-12 justify-content-center align-middle mb-0 pb-0">
                            <img id="PreviewPhoto" src="~/images/photos/@currentModel.ToLower()/@Model.PhotoUrl" alt="Logo Image" width="300" height="300" style="border:1px; margin-top:30px;" />
                        </div>
                    }

                </div>
            </div>


            <div class="p-3"></div>
            <div class="row">
                <div class="form-group col-1"></div>
                <div class="form-group col-4">
                    <label class="control-label">Актёры:</label>
                    @if (Model.Actors.Any())
                    {
                        foreach (var item in Model.Actors)
                        {
                            <input value="@item.LastName" class="form-control bg-danger bg-opacity-25" readonly />
                        }
                    }
                </div>
                <div class="form-group col-2"></div>
                <div class="form-group col-4">
                    <label class="control-label">Жанры:</label>
                    @if (Model.Genres.Any())
                    {
                        foreach (var item in Model.Genres)
                        {
                            <input value="@item.Name" class="form-control bg-danger bg-opacity-25" readonly />
                        }
                    }
                </div>
                <div class="form-group col-1"></div>
            </div>
            <div class="p-3"></div>


            <div class="row">
                <div class="col-6 form-group  btn-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
                <div class="col-6 form-group  btn-group">
                    <a class="btn btn-secondary" asp-action="Index" asp-route-currentPage="@TempData["CurrentPage"]" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")">Back</a>
                </div>
            </div>

        </form>



    </div>
</div>

<div class="p-5"></div>
