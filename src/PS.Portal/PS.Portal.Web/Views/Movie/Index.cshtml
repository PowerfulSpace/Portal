@model IEnumerable<Movie>

@{
    string currentModel = Helper.GetTypeName(Model.GetType().ToString());

    ViewData["Title"] = @currentModel + " - Index";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pagerModel = ViewBag.Pager;
}

<div class="container-fluid btn-group">
    <div class="col-10">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-2 justify-content-end">
        <p >
            <a asp-action="Create" class="btn btn-success" style="border-radius:10px;background-color:#87CEFA;border-color: black;color:black;">Create New</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <partial name="Partial/PartialPageBars/_topBar" model="pagerModel" />
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                <i class="@sortModel.GetColumn("name").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("name").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.Name)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("description").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("description").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.Description)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("rating").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("rating").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.Rating)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("yearShown").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("yearShown").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.YearShown)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("filmDuration").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("filmDuration").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.FilmDuration)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("acceptableAge").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("acceptableAge").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.AcceptableAge)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("isReaded").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("isReaded").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.IsReaded)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("partFilm").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("partFilm").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.PartFilm)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("country").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("country").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.Country)
                </a>
            </th>
            <th>
                <i class="@sortModel.GetColumn("producer").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("producer").SortExpression" asp-route-currentPage="@TempData.Peek("CurrentPage")" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")" style="color:black;text-decoration: none;">
                    @Html.DisplayNameFor(model => model.CurrentProducer)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearShown)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FilmDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcceptableAge)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsReaded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartFilm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country!.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentProducer!.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <span class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil" aria-hidden="true"></i>
                        </span>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <span class="btn btn-sm btn-outline-dark">
                            <i class="bi bi-circle" aria-hidden="true"></i>
                        </span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id">
                        <span class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-x-lg" aria-hidden="true"></i>
                        </span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div class="row">
    <div class="col-12">
        <partial name="Partial/PartialPageBars/_bottomBar" model="pagerModel" />
    </div>
</div>