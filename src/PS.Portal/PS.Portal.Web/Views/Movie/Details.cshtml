@model Movie

@{
    string currentModel = Helper.GetTypeName(Model.GetType().ToString());
    ViewData["Title"] = @currentModel + " Create";
}

<h1>@currentModel Details</h1>

<form>
    <div class="col-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control" readonly></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Rating" class="control-label"></label>
            <input asp-for="Rating" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="YearShown" class="control-label"></label>
            <input asp-for="YearShown" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="FilmDuration" class="control-label"></label>
            <input asp-for="FilmDuration" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="AcceptableAge" class="control-label"></label>
            <input asp-for="AcceptableAge" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="IsReaded" class="control-label"></label>
            <input asp-for="IsReaded" type="checkbox" class="form-check-input" readonly />
        </div>
        <div class="form-group">
            <label asp-for="PartFilm" class="control-label"></label>
            <input asp-for="PartFilm" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="CountryId" class="control-label"></label>
            <input asp-for="Country!.Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="ProducerId" class="control-label"></label>
            <input asp-for="CurrentProducer!.LastName" class="form-control" readonly />
        </div>
        <div class="btn-group">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-secondary" asp-action="Index" asp-route-currentPage="@TempData["CurrentPage"]" asp-route-pageSize="@TempData.Peek("PageSize")" asp-route-searchText="@TempData.Peek("SearchText")">Back</a>
        </div>
    </div>
</form>

