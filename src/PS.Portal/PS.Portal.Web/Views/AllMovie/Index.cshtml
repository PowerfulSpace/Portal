@model IEnumerable<Movie>


@{
    string currentModel = Helper.GetTypeName(Model.GetType().ToString());

    ViewData["Title"] = @currentModel + " - Index";
    SortModel sortModel = (SortModel)ViewData["sortModel"];
    PagerModel pagerModel = ViewBag.Pager;
}




<div class="row">
    <div class="col-12">
        <partial name="Partial/PartialPageBars/_topBar" model="pagerModel" />
    </div>
</div>

<div class="p-5"></div>

@if (Model.Any())
{
    @foreach (var movie in Model)
    {

        <div class="row border border-light">
            <div class="col-5 bg-secondary bg-opacity-10">
                <p class="card-title">@movie.Name (@movie.ReleaseYear.Year)</p>
            </div>
            <div class="col-1 bg-secondary bg-opacity-25">
                <p class="card-title">@movie.Rating</p>
            </div>
            <div class="col-6"></div>
        </div>
    }
}

<div class="p-5"></div>

<div class="row">
    <div class="col-12">
        <partial name="Partial/PartialPageBars/_bottomBar" model="pagerModel" />
    </div>
</div>